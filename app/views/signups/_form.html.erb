    <h4>Last name</h4>
    <%= f.text_field :lastName,class:'form-control required',:placeholder=>"Email"  %>
  </div>
  <div class="field">
    <h4>Address</h4>
    <%= f.text_field :address ,class:'form-control required',:placeholder=>"Email" %>
  </div>
  <div class="field">
    <h4>City</h4>
    <%= f.text_field :city ,class:'form-control required',:placeholder=>"Email" %>
  </div>
  <div class="field">
    <h4>Postcode</h4>
    <%= f.text_field :postcode ,class:'form-control required',:placeholder=>"Email" %>
  </div>
  <div class="field">
    <h4>Country</h4>
    <%= f.text_field :country ,class:'form-control required',:placeholder=>"Email" %>
  </div>
  <div class="field">
    <h4>Phone</h4>
    <%= f.text_field :phone ,class:'form-control required',:placeholder=>"Email" %>
  </div>
  <div class="actions">
